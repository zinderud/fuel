{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
  
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [],
    "types": [],
    "skipLibCheck": true,  "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */

  },
  "include": ["src/**/*" ],
 
  "exclude": ["src/**/*.spec.ts"]
}
